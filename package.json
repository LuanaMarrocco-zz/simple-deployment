{
  "name": "SettleMintCoin",
  "version": "0.0.0",
  "description": "The boilerplate project setup for Mint enabled projects",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build:truffle": "truffle compile",
    "build:contracts": "typechain --target truffle './build/contracts/*.json'",
    "build:ts": "tsc --declaration",
    "build": "npm run build:truffle && npm run build:contracts && npm run build:ts",
    "test": "truffle test",
    "lint:contracts": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "tslint -c tslint.json -p tsconfig.json",
    "lint": "npm run lint:contracts && npm run lint:ts",
    "pretest": "npm run lint && npm run build",
    "watch": "nodemon --watch . --exec npm run test",
    "truffle": "truffle",
    "prepublishOnly": "docker build --build-arg NPM_TOKEN=${NPM_TOKEN} -t settlemint/viadonbosco .",
    "solium": "solium",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/settlemint/viadonbosco"
  },
  "author": "SettleMint <hello@settlemint.com>",
  "license": "SEE LICENSE IN mint-license.txt",
  "bugs": {
    "url": "http://github.com/settlemint/viadonbosco/issues"
  },
  "homepage": "http://github.com/settlemint/viadonbosco",
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/github": "^5.4.3",
    "@semantic-release/npm": "^5.1.15",
    "@types/faker": "^4.1.5",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.24",
    "semantic-release-cli": "^5.2.1",
    "semantic-release-docker": "^2.2.0",
    "solc": "^0.5.11",
    "solhint": "^2.2.0",
    "truffle": "^5.0.35",
    "truffle-typings": "^1.0.8",
    "ts-node": "^8.3.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "tsutils": "^3.17.1",
    "typechain": "^0.3.20",
    "typescript": "^3.6.2",
    "minimatch": "^3.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "semantic-release-docker"
    ],
    "prepare": [
      "@semantic-release/npm"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github",
      {
        "path": "semantic-release-docker",
        "name": "settlemint/viadonbosco"
      }
    ],
    "success": [
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@settlemint/mint-solidity": "^1.24.0-beta.4",
    "faker": "^4.1.0",
    "minimatch": "^3.0.4",
    "@truffle/hdwallet-provider": "^1.0.33",
    "dotenv": "^8.2.0",
    "truffle-privatekey-provider": "latest"
  }
}
